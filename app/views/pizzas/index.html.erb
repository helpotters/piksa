<h1>Pizzas List</h1>

<ul>
  <% @pizzas.each do |pizza| %>
    <li>
      <strong><%= pizza.name %></strong>
      <ul>
        <% pizza.toppings.each do |topping| %>
          <li><%= topping.name %></li>
        <% end %>
      </ul>
      <%= link_to 'Edit', edit_pizza_path(pizza) %> |
      <%= link_to 'Delete', pizza_path(pizza), method: :delete, data: { confirm: 'Destroy this beautiful pizza?' }, id: "delete-pizza-#{pizza.id}" %>
    </li>
  <% end %>
</ul>

<%= link_to 'Add New Pizza', new_pizza_path %>
