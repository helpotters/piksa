<h1 class="text-4xl font-bold text-center mb-6">Toppings List</h1>

<div class="flex justify-center">
  <div class="w-full max-w-md bg-white shadow-md rounded-lg overflow-hidden">
    <ul class="divide-y divide-gray-200">
      <% @toppings.each do |topping| %>
        <li class="flex items-center justify-between px-4 py-2">
          <span class="font-medium text-gray-800"><%= topping.name %></span>
          <% if current_user&.role == 'store_owner' %>
            <%= link_to 'Delete', topping_path(topping), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-error btn-sm", id: "delete-topping-#{topping.id}" %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<div class="flex justify-center mt-6">
  <%= link_to 'Add New Topping', new_topping_path, class: "btn btn-primary" %>
</div>
